rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /system_docs/{docId}/files/{fileId} {
      allow read: if request.auth != null && request.auth.token.role == 'admin';
      allow write: if false;
    }

    // Logs collection - server-side only (admin SDK)
    match /logs/{logId} {
      allow read: if request.auth != null && request.auth.token.role == 'admin';
      allow write: if false; // Only admin SDK can write (from Cloud Functions)
    }

    // Agent chats - users can read/write their own sessions
    match /agent_chats/{sessionId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update: if request.auth != null && request.auth.uid == resource.data.userId;
      allow delete: if false; // No deletes allowed
    }

    // Default deny.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
