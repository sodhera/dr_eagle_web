{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["ES2022", "DOM"],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "..",
    "outDir": "lib",
    "types": ["node"]
  },
  "include": ["src/**/*", "../src/**/*"],
  "exclude": ["lib", "../dist", "../node_modules"]
}
